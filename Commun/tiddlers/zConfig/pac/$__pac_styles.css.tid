  }

body {
    margin: 15mm;
}

.tc-body {
    font-size:12pt;
}

h5, .tc-tiddler-title, .tc-subtitle, .tc-tags-wrapper, .todo, .com {
    display:none;
}

.tc-tiddlylink, .tc-tiddlylink-missing {
    color:black;
    font-style:normal;
}

h1 {
   page-break-before:always;
}

