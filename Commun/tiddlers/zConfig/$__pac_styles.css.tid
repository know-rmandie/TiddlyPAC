@media print {
body {
   margin:1cm;
}
.tc-tiddler-title, .tc-subtitle, .tc-tags-wrapper, .todo, .com {
    display:none;
}
.tc-tiddlylink, .tc-tiddlylink-missing {
    color:black;
    font-style:normal;
}
h1 {
   page-break-before:always;
}
h1.titre {
    font-size:20pt;
    margin:10cm 0 5cm 0;
    page-break-before:never;
    line-height:25pt;
}
