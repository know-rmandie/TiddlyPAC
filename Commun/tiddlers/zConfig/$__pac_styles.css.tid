.tc-tiddler-body p {
    text-align:justify;
}

.tc-tiddlylink-external {
    font-family: "Liberation Sans Narrow";
    color:green !important;
}

h1.titre {
    text-align:center;
}

h5 {
    font-size:.9em;
}

h5.todo {
    background-color: orange;
}

h5, .com {
    background-color: lightblue;
    padding:.5em;
    margin:2px;
    font-style:italic;
    font-family:serif;
}

h6, .nbp {
    font-size:.8em;
    font-style:italic;
    color:gray;
}

input.pac {
    border:none;
    border-bottom:2px solid green;
    padding:0 4px;
}

input.short {
    width:3em
}

blockquote.ref {
    font-family: "Liberation serif", Georgia, serif;
   font-style:italic;
   position: relative;
   color:#555;
   border-left: none; margin-left: 50px;
   padding: 10px; border-radius: 8px; }

blockquote.ref cite:before { content: "\2014 \2009"; }

blockquote.ref:before {
    font-family: "Liberation serif", Georgia, serif;
   color: #bbb;
   content: open-quote; font-size: 8em;
   line-height: 0.1em;
   margin-right: 0.25em;
   vertical-align: -0.4em;
   position: absolute; left: -50px; top: 42px;
}

/*blockquote.tc-big-quote:after { font-family: Georgia, serif; color: #bbb; content: close-quote; font-size: 8em; line-height: 0.1em; margin-right: 0.25em; vertical-align: -0.4em; position: absolute; right: -80px; bottom: -20px; }*/

blockquote.obli {
    margin: 0;
    border-left-color:blue;
}

blockquote.doc {
    margin: 0;
    font-style: italic;
    color: gray;
}

